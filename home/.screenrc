# no moar annoying message
startup_message off

# Visual bell
vbell on

bell "%c bell -> %n%f %t^G"
vbell_msg " *beep* "


# track activity in other windows
activity "%c activity -> %n %t"

# Keeps stuff running when detached
autodetach on

# UTF plz
defutf8 on

# lotsa scrollback
defscrollback 5000

# Use login shell, to get goodness in ~/.bash_profile
shell -${SHELL}

caption always "%{=b dy}{ %?%{= dc}%-Lw%?%{+b dy}(%{-b r}%n:%t%{+b dy})%?(%u)%?%{-dc}%?%{= dc}%+Lw%? %{=b dy}} %= %{=b dy}%D, %d. %M '%y %{=b dw}%c:%s %{=b dy}{ %{= dg}${USER}@%{= dr}%H %{=b dy}} %{=b d2}%l %{=b dy}%u %{=b dy}"
